{#
  style one of: warning important tip note
#}

{% macro svg_note() -%}
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
{%- endmacro %}

{% macro svg_warning() %}
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
{%- endmacro %}

{% macro svg_important() %}
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
{%- endmacro %}

{% macro svg_tip() %}
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
{%- endmacro %}

{# From: https://daisyui.com/components/alert #}
{# Change background based on class #}

{% if style|lower == "note" %}
  <div class="alert alert-info">
{% elif style|lower == "warning" %}
  <div class="alert alert-error">
{% elif style|lower == "important" %}
{# Rather have `important` note than warning+error #}
  <div class="alert alert-warning">
{% elif style|lower == "tip" %}
  <div class="alert alert-success">
{% else %}
  <div class="alert">
{% endif %}
    <div class="flex-1 ssm:flex-row flex-col align-baseline">
    <div>
    {# FUTURE: Understand why mt-1 is necessary to fix svg height offset #}
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-2 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      {% if style|lower == "note" %}
        {{ svg_note() }}
      {% elif style|lower == "warning" %}
        {{ svg_warning() }}
      {% elif style|lower == "important" %}
        {{ svg_important() }}
      {% elif style|lower == "tip" %}
        {{ svg_tip() }}
      {% else %}
      {% endif %}
      </svg>
    </div>
    {# TODO: Combine the svg element and the text #}
    {# Better for smaller screens #}
    <div>
      <label class="text-base-content">
      <b>{{ style|capitalize }}:</b>
      {{ data }}
      </label>
    </div>
    </div>
  </div>
