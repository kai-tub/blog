{% import 'base_helper.tmpl' as base with context %}

{% macro html_header() %}
    {# <section class="w-full h-1/4 mb-4 bg-center bg-no-repeat bg-cover bg-black bg-hero-pattern" id="header"> #}
    <div>
        {{ html_navigation_links() }}
        {# TODO: Add support for translation header #}
        {# {{ html_translation_header() }} #}
        {# TODO: Add support for search_form #}
        {# {% if search_form %}
            <div class="searchform" role="search">
                {{ search_form }}
            </div>
        {% endif %} #}
    {{ template_hooks['page_header']() }}
    </div>
    <section class="hero min-h-screen-1/3 mb-8 bg-no-repeat bg-black bg-hero-pattern" id="header">
        <div class="hero-overlay bg-opacity-75">
            <div class="text-center hero-content h-full text-neutral-content mx-auto">
                <div class="max-w-md">
                {{ html_site_title() }}
                </div>
            </div>
        </div>
